<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cource_Details">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/mainlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_centerHorizontal="true">

            <!--            //Couce Name-->
            <LinearLayout
                android:id="@+id/courcenamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <!--            <ImageView-->
                <!--                android:layout_width="40dp"-->
                <!--                android:layout_height="40dp"-->
                <!--                android:gravity="center"-->
                <!--                android:src="@drawable/java"/>-->

                <TextView
                    android:id="@+id/courcename1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java Full Stack"
                    android:fontFamily="@font/robotoblack"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/courcename2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Training Course Overview"
                    android:gravity="center"
                    android:fontFamily="@font/robotoblack"
                    android:textSize="24sp"/>

            </LinearLayout>


            <!--            //Cource Points-->
            <LinearLayout
                android:id="@+id/courcepointlayout1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/javafsbg">

                <ScrollView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <LinearLayout
                        android:id="@+id/courcepointlayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="-25dp"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/point1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Front-End Development"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/point2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Back-End Development"
                            android:padding="10dp"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/point3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Stack Integration"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/point4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Database Management"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/point5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Project Management"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/point6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Version Control (Git And Github)"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/point7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Certificate of Completion"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/point8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration - 6 months"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/point9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fees - 45k"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/point10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mode - Online/Offline"
                            android:drawableStart="@drawable/baseline_check_circle_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>


            <!--            //Fees-->
            <!--            <LinearLayout-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal">-->

            <!--                <TextView-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="Fees"-->
            <!--                    android:textSize="20sp"-->
            <!--                    android:textColor="#D92525"/>-->

            <!--                <TextView-->
            <!--                    android:id="@+id/fees"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="45k"-->
            <!--                    android:layout_marginStart="20dp"-->
            <!--                    android:textSize="20sp"-->
            <!--                    android:textColor="#D92525"/>-->

            <!--            </LinearLayout>-->


            <!--            //Mode-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modes Of Training"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <!--            //Modes Of Training-->
            <LinearLayout
                android:id="@+id/modelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:elevation="50dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/onlineclass"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Online Tranning"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/classroom"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Classroom Tranning"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/onetoone"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="1-To-1 Tranning"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/corporatetraining"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Corporate Tranning"
                        android:textSize="16sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructor"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/instructername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instructor Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-10dp">

                <ImageView
                    android:id="@+id/instructerimg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/profinstructer"
                    android:background="@drawable/profileimg"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp">

                    <TextView
                        android:id="@+id/instructerinfo1"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="instructer info"/>

                    <TextView
                        android:id="@+id/instructerinfo2"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="instructer info"/>

                    <TextView
                        android:id="@+id/instructerinfo3"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="instructer info"/>

                    <TextView
                        android:id="@+id/instructerinfo4"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="instructer info"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Profile"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="#28A745"
                android:textColor="@color/black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/feestext"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="45,000Rs\\-"
                    android:textSize="16sp"
                    android:background="#3956FA"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:background="#E60A0A"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
